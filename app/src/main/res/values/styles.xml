<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#ff5900</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#143d96</item>
    </style>

    <style name="TextViews" parent="@style/AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#ff5500</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Scores" parent="@style/AppTheme">
        <item name="android:textSize">56sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>

        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Btn" parent="@style/AppTheme">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">24dp</item>

        <item name="android:textColor">#ffffff</item>

    </style>
</resources>
